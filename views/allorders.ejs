<%- include('layouts/header'); -%>
<body>
    <h1 id="title">Plant Shop</h1>
    <%- include('layouts/nav'); -%>
    <table id="allOrders">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Delivery Address</th>
                <th>Small Pots</th>
                <th>Medium Pots</th>
                <th>Big Pots</th>
                <th>Shipping Charge</th>
                <th>Sub Total</th>
                <th>Tax</th>
                <th>Tax Payed</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <%
            for(var order of orders){
                %>
                <tr>
                    <td><%= order.name %></td>
                    <td><%= order.email %></td>
                    <td><%= order.phone %></td>
                    <td><%= order.deliveryAddress %></td>
                    <td><%= order.potSmall %></td>
                    <td><%= order.potMedium %></td>
                    <td><%= order.potBig %></td>
                    <td>$<%= order.shippingCharge.toFixed(2) %></td>
                    <td>$<%= order.subTotal.toFixed(2) %></td>
                    <td>$<%= order.tax.toFixed(2) %></td>
                    <td>$<%= order.taxPayed.toFixed(2) %></td>
                    <td>$<%= order.total.toFixed(2) %></td>
                </tr>
                <%
            }
            %>
            <tr></tr>
        </tbody>
    </table>
</body>
</html>